# Zescrow Deployment Configuration
# Copy to .env in project root and fill in your values.
#
# This configuration supports both local development and testnet deployment.
# Switch between environments by changing the RPC URLs.

# =============================================================================
# Logging
# =============================================================================

# Log level for CLI output (error, warn, info, debug, trace)
RUST_LOG=info

# =============================================================================
# Solana Configuration
# =============================================================================

# Network: "local" or "devnet"
# - local: http://localhost:8899 (solana-test-validator)
# - devnet: https://api.devnet.solana.com
SOLANA_RPC_URL=http://localhost:8899

# Program ID (from `anchor deploy` output)
# For local development, this changes each deployment
SOLANA_PROGRAM_ID=

# Sender's keypair file path (usually ~/.config/solana/id.json)
SOLANA_SENDER_KEYPAIR_PATH=/absolute/path/to/.config/solana/id.json

# Sender's public key (base58) - run: solana address
SOLANA_SENDER_PUBKEY=

# Recipient's public key (base58)
SOLANA_RECIPIENT_PUBKEY=

# Recipient's keypair path (for finish operations)
SOLANA_RECIPIENT_KEYPAIR_PATH=

# =============================================================================
# Ethereum Configuration
# =============================================================================

# Network RPC URL:
# - local: http://localhost:8545 (hardhat node)
# - sepolia: https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY
ETHEREUM_RPC_URL=http://localhost:8545

# Deployed escrow contract address (from deploy script output)
ESCROW_CONTRACT_ADDRESS=

# Sender's private key for contract deployment (0x prefix optional)
# For local Hardhat, use any of the pre-funded account keys
ETHEREUM_SENDER_PRIVATE_KEY=

# Sender's address (0x prefix optional)
ETHEREUM_SENDER_ADDRESS=

# Recipient's address (0x prefix optional)
ETHEREUM_RECIPIENT_ADDRESS=

# Note: When using --recipient flag with zescrow-client, the 0x prefix
# IS required to distinguish Ethereum keys from Solana keypair paths.

# Etherscan API key for contract verification (optional, Sepolia only)
ETHERSCAN_API_KEY=
