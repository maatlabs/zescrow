# Zescrow Deployment Configuration
# Copy to .env in project root and fill in your values

# =============================================================================
# Solana (Devnet)
# =============================================================================

# Path to sender's keypair file
SOLANA_SENDER_KEYPAIR_PATH=~/.config/solana/id.json

# Sender's public key (base58)
SOLANA_SENDER_PUBKEY=

# Recipient's public key (base58)
SOLANA_RECIPIENT_PUBKEY=

# Recipient's keypair path (for finish operations)
SOLANA_RECIPIENT_KEYPAIR_PATH=

# =============================================================================
# Ethereum (Sepolia)
# =============================================================================

# Sepolia RPC URL (Alchemy, Infura, or your own node)
ETHEREUM_SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY

# Sender's private key (without 0x prefix)
ETHEREUM_SENDER_PRIVATE_KEY=

# Sender's address (with 0x prefix)
ETHEREUM_SENDER_ADDRESS=

# Recipient's address (with 0x prefix)
ETHEREUM_RECIPIENT_ADDRESS=

# Deployed escrow contract address (with 0x prefix)
# Set this after running deploy/ethereum/run.sh
ESCROW_CONTRACT_ADDRESS=

# Etherscan API key for contract verification (optional)
ETHERSCAN_API_KEY=
