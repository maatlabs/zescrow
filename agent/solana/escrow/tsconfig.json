{
  "compilerOptions": {
    "types": ["mocha", "chai"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["ES2024"],
    "module": "nodenext",
    "target": "es2024",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true
  },

  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
